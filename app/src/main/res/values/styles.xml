<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/LiveObjectsActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="LiveObjectsActionBar"
           parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/theme_actionbar</item>
        <item name="background">@color/theme_actionbar</item>

        <item name="titleTextStyle">@style/LiveObjectsTitleText</item>
    </style>

    <style name="LiveObjectsTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@color/theme_icon_text</item>
        <item name="android:shadowColor">@color/theme_icon_text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">6</item>
    </style>

</resources>
