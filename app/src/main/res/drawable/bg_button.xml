<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="90"
                android:startColor="@color/theme_orange"
                android:centerColor="@color/theme_middle_orange"
                android:endColor="@color/theme_light_orange"/>/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="90"
                android:startColor="@color/theme_pure_transparent_background"
                android:centerColor="@color/theme_pure_transparent_background"
                android:endColor="@color/theme_pure_transparent_background"/>
        </shape>
    </item>
</selector>