<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <edu.mit.media.obm.liveobjects.app.widget.RoundedImageView
        android:id="@+id/grid_item_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:border="true"
        app:shadow="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/grid_item_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/grid_item_icon"
        android:layout_alignTop="@+id/grid_item_icon"
        android:layout_alignRight="@+id/grid_item_icon"
        android:layout_alignBottom="@+id/grid_item_icon"
        android:layout_margin="1dp"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="@color/theme_icon_text"
        android:shadowColor="@color/theme_icon_text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="Colosseum" />
</RelativeLayout>