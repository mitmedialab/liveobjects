<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadingPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.mit.media.obm.liveobjects.app.DetailActivity$PlaceholderFragment"
    android:gravity="center" >

    <ProgressBar
        android:id="@+id/detail_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center" >

        <com.pkmmte.view.CircularImageView
            android:id="@+id/object_image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="108dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:border_color="#EEEEEE"
            app:border_width="4dp"
            app:shadow="true"
            android:clickable="true"
            app:selector="true"
            app:selector_color="#44FFBB33"
            app:selector_stroke_color="#88FF8800"
            app:selector_stroke_width="2dp"
            android:background="@drawable/play" />

        <TextView
            android:layout_marginTop="12dp"
            android:text="Placeholder Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/object_title_textview" />

    </LinearLayout>

</RelativeLayout>

