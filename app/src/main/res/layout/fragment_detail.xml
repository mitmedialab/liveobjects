<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:context="edu.mit.media.obm.liveobjects.app.DetailActivity$PlaceholderFragment"
    android:gravity="center" >

    <ImageView
        android:id="@+id/loadingPanel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ProgressBar
        android:id="@+id/detail_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="108dp"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:background="@color/theme_transparent_background"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/object_image_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="108dp"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:clickable="true"
                android:background="@drawable/play"
                android:layout_gravity="center" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="12dp"
            android:text="Placeholder Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:textColor="@color/theme_icon_text"
            android:shadowColor="@color/theme_icon_text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:id="@+id/object_title_textview" />

    </LinearLayout>

</RelativeLayout>

